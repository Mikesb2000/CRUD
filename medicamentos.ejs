<%- include('header.ejs') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>NO.</td>
            <td>codigo</td>
            <td>nombre</td>
            <td>dosis</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= data[i].codigo %></td>
                <td><%= data[i].nombre %></td>
                <td><%= data[i].dosis %></td>
                <td>
                  <a href="/medicamentos/update/<%= data[i].codigo %>" class="btn btn-info">Edit</a>
                  <a href="/medicamentos/delete/<%= data[i].codigo %>" class="btn btn-danger">Delete</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <div class="card-body">

        <form action="/medicamentos/add" method="POST">
          <div class="form-group">
            <input type="text" name="codigo" placeholder="Codigo" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="nombre" placeholder="Nombre" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="dosis" placeholder="Dosis" class="form-control">
          </div>

          <button type="submit" class="btn btn-primary">
            guardar
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include('footer.ejs') %>
