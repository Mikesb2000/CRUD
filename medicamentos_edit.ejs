<%- include('header.ejs') %>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-5 offset-md-3 card">
                <div class="card-body">
                    <form action="/medicamentos/update/<%= data.codigo%>" method="POST">
                        <div class="form-group">
                            <input type="text" name="codigo" value="<%=data.codigo%>" class="form-control"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="nombre" value="<%= data.nombre%>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="dosis" value="<%= data.dosis%>" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            guardar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%- include('footer.ejs') %>